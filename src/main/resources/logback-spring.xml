<?xml version="1.0" encoding="UTF-8"?>
<!-- 日志级别从低到高分为TRACE < DEBUG < INFO < WARN < ERROR < FATAL，如果设置为WARN，则低于WARN的信息都不会输出 -->
<!-- scan:当此属性设置为true时，配置文件如果发生改变，将会被重新加载，默认值为true -->
<!-- scanPeriod:设置监测配置文件是否有修改的时间间隔，如果没有给出时间单位，默认单位是毫秒。当scan为true时，此属性生效。默认的时间间隔为1分钟。 -->
<!-- debug:当此属性设置为true时，将打印出logback内部日志信息，实时查看logback运行状态。默认值为false。 -->
<configuration  scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>logback</contextName>
    <!-- name的值是变量的名称，value的值时变量定义的值。通过定义的值会被插入到logger上下文中。定义变量后，可以使“${}”来使用变量。 -->
    <property name="LOG_HOME" value="../logs"/>
    <!--格式化输出：%d:表示日期    %thread:表示线程名     %-5level:级别从左显示5个字符宽度  %msg:日志消息    %n:是换行符-->
    <property name="DATE_FORMAT" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{200} - %msg%n "/>
    <!--输出到控制台-->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
             <level>DEBUG</level>
        </filter>
        <encoder>
            <pattern>${DATE_FORMAT}</pattern>
        </encoder>
    </appender>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>${DATE_FORMAT}</pattern>
        </encoder>
    </appender>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>${DATE_FORMAT}</pattern>
        </encoder>
    </appender>

    <!--按天生成日志-->
    <appender name="logFile"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
		<!-- 分文件存日志 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>
                ${LOG_HOME}/ztyg/%d{yyyy-MM-dd}_%i.log
            </FileNamePattern>
            <MaxHistory>30</MaxHistory> --> <!-- 保存30天 -->
			<MaxFileSize>10MB</MaxFileSize> <!-- 日志文件过大会使的编辑器打开非常慢，因此设置日志最大10MB -->
            <TotalSizeCap>1GB</TotalSizeCap> <!-- 总日志大小 -->
         </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                ${DATE_FORMAT}
            </Pattern>
        </layout>
    </appender>

    <!--开发环境:打印控制台-->
    <springProfile name="dev">
        <logger name="net.microcental.dev.management.sensor.service" level="DEBUG"/>
    </springProfile>

    <root level="INFO">
        <appender-ref ref="console" />
        <appender-ref ref="logFile" />
    </root>
</configuration>
